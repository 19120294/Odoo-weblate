<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link href="estate/static/src/scss/field_widget.scss" rel="stylesheet" type="text/scss" />
            <script src="estate/static/src/js/custom_color_widget.js" type="text/javascript" />
            <script src="estate/static/src/js/date_widget.js" type="text/javascript" />
            <script src="estate/static/src/js/button_widget.js" type="text/javascript" />
            <script src="estate/static/src/js/checkbox_widget.js" type="text/javascript" />
            <script src="estate/static/src/js/combined_widget.js" type="text/javascript" />
        </xpath>
    </template>

    <template id="assets_frontend" name="custom assets" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css"
                href="/estate/static/src/scss/custom_primary_color.scss" />
        </xpath>
    </template>

    <template id="assets_frontend" name="custom assets" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css"
                href="/estate/static/src/scss/custom_navbar.scss" />
        </xpath>
    </template>


</odoo>