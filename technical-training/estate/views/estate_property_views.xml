<odoo>
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Title" />
                <field name="code" readonly="1" />
                <field name="postcode" string="Postcode" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area" />
                <field name="expected_price" string="Expected Price" />
                <field name="selling_price" string="Selling Price" />
                <field name="date_availability" string="Date Availability" />
                <field name="property_type_id" string="Property Type" />
                <field name="tag_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_accepted_offers"
                            type="object"
                            string="Accepted Offers"
                            class="oe_highlight"
                            icon ="fa-list"
                            style="margin-right: 5px" />
                        <field name="count_offer_accepted" string="Offer Accepted" widget="statinfo"/>
                    </div>
                    <header style="margin-top: -20px;">
                        <button name="action_sold"  
                            type="object"
                            string="Sold"
                            class="btn-primary"
                            attrs="{'invisible': [('state', 'in', ['new', 'offer_received', 'sold', 'canceled'])]}" />

                        <button name="action_cancel"
                            type="object"
                            string="Cancel"
                            class="btn-danger"
                            attrs="{'invisible': [('state', 'in', ['sold', 'canceled'])]}" />

                        <button name="action_create_offer"
                            type="object"
                            string="Create Offer"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'new')]}" />

                        <field name="state" widget="statusbar" options="{'clickable':'1'}" />
                    </header>
                    <group>
                        <field name="code" readonly="1" />
                        <field name="name" string="Name" required="1" style="font-size:25px; font-weight:bold;" />
                        <group style="border-right: none !important;">
                            <field name="tag_ids" widget="many2many_tags" />
                            <field name="property_type_id" string="Property Type" />
                            <field name="postcode" string="Postcode" />
                            <field name="date_availability" string="Date Availability" />
                        </group>
                        <group style="margin-top: 45px;">
                            <field name="expected_price" string="Expected Price" />
                            <field name="selling_price" string="Selling Price" readonly="1" />
                            <field name="reason_cancel"
                                attrs="{'invisible': [('state', '!=', 'canceled')]}" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description" />
                                <field name="bedrooms" string="Bedrooms" />
                                <field name="living_area" string="Living Area" />
                                <field name="garage" string="Garage" />
                                <field name="garden" string="Garden" />
                                <field name="garden_area" string="Garden Area" />
                                <field name="total_area" readonly="1" />
                                <field name="best_price" readonly="1" />
                            </group>
                        </page>
                        <page string="Offers" attrs="{'invisible': [('state', '=', 'new')]}">
                            <field name="offer_ids" widget="one2many_list">
                                <tree>
                                    <field name="price" />
                                    <field name="partner_id" />
                                    <field name="status" />
                                    <button name="action_accept" type="object" string="Accept (v)"
                                        class="btn-success" />
                                    <button name="action_refuse" type="object" string="Refuse (x)"
                                        class="btn-danger" />
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="price" />
                                            <field name="partner_id" />
                                            <field name="status" />
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id" string="Buyer" />
                                <field name="salesperson_id" string="Salesperson" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property Search">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="property_type_id" />

                <filter string="New Properties" name="new_properties"
                    domain="[('state', '=', 'new')]" />
                <filter string="Offer Received" name="offer_received"
                    domain="[('state', '=', 'offer_received')]" />

                <group string="Group By">
                    <filter string="Postcode" name="group_by_postcode"
                        context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="seq_estate_property_code" model="ir.sequence">
        <field name="name">Property Code</field>
        <field name="code">estate.property.code</field>
        <field name="prefix">EPT</field>
        <field name="padding">5</field>
    </record>
</odoo>