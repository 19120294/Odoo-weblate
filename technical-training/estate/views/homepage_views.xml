    <template id="bemo_header_language_selector"
        inherit_id="website.placeholder_header_language_selector"
        name="Bemo Header Language Selector" active="True">
        <xpath expr="." position="inside">
            <t id="bemo_header_language_selector_call" t-call="portal.language_selector">
                <t t-set="_div_classes" t-value="(_div_classes or '') + ' dropdown'" />
            </t>
        </xpath>
    </template>

    <template id="bemo_header_language_selector_flag" name="Bemo Header Language Selector Flag"
        inherit_id="estate.bemo_header_language_selector" active="True">
        <xpath expr="//t[@id='bemo_header_language_selector_call']" position="before">
            <t t-set="flags" t-value="True" />
        </xpath>
