<odoo>
    <record id="view_confirm_cancel_wizard" model="ir.ui.view">
        <field name="name">confirm.cancel.wizard.form</field>
        <field name="model">confirm.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Cancellation">
                <group>
                    <field name="reason_cancel"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_cancel" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>